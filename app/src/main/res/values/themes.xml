<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TabiKu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="bottomNavigationStyle">@style/BottomNavStyle</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="backgroundTint">@color/soft_blue</item>
    </style>
    <style name="Theme.StatusBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/soft_blue</item>
    </style>
    <style name="Theme.StatusBar2" parent="Theme.Design.Light.NoActionBar">
        <item name="android:statusBarColor">@color/soft_blue</item>
    </style>

    <style name="TitleFont">
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="ContentFont">
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>
</resources>